{
  "name": "@gethydrated/site",
  "version": "0.0.0",
  "private": true,
  "description": "Gethydrated site",
  "scripts": {
    "build": "tsc",
    "dev": "npm start | pino-pretty",
    "lint": "eslint -c .eslintrc.js --ext .ts src/",
    "start": "node dist/src/app.js",
    "test": "mocha --require ts-node/register src/**/*.spec.ts",
    "watch": "PORT=1999 ts-node src/app.ts | pino-pretty"
  },
  "author": "Dmitrii Sorin <info@staypositive.ru>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/got": "^9.6.7",
    "@types/node": "^12.7.8",
    "@types/pino": "^5.8.10",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.5.1",
    "husky": "^3.0.7",
    "pino-pretty": "^3.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "express": "^4.17.1",
    "got": "^9.6.0",
    "pino": "^5.13.4"
  }
}
